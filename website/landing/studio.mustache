---
{{!-- hero section --}}
{{>>hero.mustache ...page.attributes.hero}}
    <div class="flex justify-center">
        <div class="w-full max-w-lg d-flex flex-col bg-gray-950 text-white p-5 rounded-2xl text-lg text-center font-mono">
            <div>$ {{page.attributes.hero.command}}</div>
        </div>
    </div>
{{/hero.mustache}}

{{!-- first features section --}}
{{>>section.mustache ...page.attributes.features.sectionOptions}}
    {{!--
    <div class="mb-8 w-full border-2 border-gray-200 rounded-2xl bg-white overflow-hidden">
        <img src="/screenshots/studio-landing-20251006.png" alt="Folio Studio screenshot" width="100%" loading="lazy">
    </div>
    --}}
    {{>group.mustache size="3" items=page.attributes.features.items}}
{{/section.mustache}}

{{!-- usage features section --}}
{{>>section.mustache ...page.attributes.usage.sectionOptions}}
    {{>group.mustache size="2" items=page.attributes.usage.items}}
{{/section.mustache}}

{{!-- questions and answers section --}}
{{>>section.mustache ...page.attributes.faq.sectionOptions}}
    <div class="">
        {{#each page.attributes.faq.items}}
        <div class="border-b-1 border-white" data-role="faq:item">
            <button class="text-xl w-full flex justify-between items-center border-0 py-6 cursor-pointer" data-role="faq:question">
                <div class="font-bold text-left">{{!this.question}}</div>
                <div class="" data-role="faq:toggle">+</div>
            </button>
            <div class="hidden pt-2 pb-6 text-lg leading-relaxed" data-role="faq:answer">
                {{!this.answer}}
            </div>
        </div>
        {{/each}}
    </div>
{{/section.mustache}}

{{!-- call to action --}}
{{>cta.mustache ...page.attributes.callToAction}}

<script>
    Array.from(document.querySelectorAll(`[data-role="faq:question"]`)).forEach(button => {
        button.addEventListener("click", () => {
            const item = button.closest(`[data-role="faq:item"]`);
            const answer = item.querySelector(`[data-role="faq:answer"]`);
            const isOpen = !answer.classList.contains("hidden");
            // 1. we have to close all other items and change the toggle icon to a '+'
            document.querySelectorAll(`[data-role="faq:answer"]`).forEach(otherAnswerItem => {
                otherAnswerItem.classList.add("hidden");
            });
            document.querySelectorAll(`[data-role="faq:toggle"]`).forEach(otherToggleItem => {
                otherToggleItem.textContent = "+";
            });
            // 2. Now, we toggle the current item
            if (!isOpen) {
                answer.classList.remove("hidden");
                item.querySelector(`[data-role="faq:toggle"]`).textContent = "-";
            }
        });
    });
</script>
