<!doctype html>
<html lang="en" style="overscroll-behavior-x:none;">
<head>
    <meta charSet="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">
    <meta name="title" content="{{site.title}}">
    <meta name="description" content="{{site.description}}">
    {{#each site.meta}}
    <meta name="{{name}}" content="{{value}}">
    {{/each}}
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap">
    <link rel="stylesheet" href="/low.css">
    <link rel="stylesheet" href="/brand.css">
    <title>{{page.attributes.title}} - folio</title>
</head>
<body class="m-0 p-0 font-sans leading-normal folio--primary">
    <header class="flex items-center justify-between w-full px-6 pt-6 max-w-8xl mx-auto absolute top-0 left-0 right-0">
        <a href="/" class="flex items-center gap-2 cursor-pointer text-current">
            <div class="text-3xl sm:text-4xl folio--brand">folio.</div>
        </a>
        <div class="flex gap-6 items-center">
            {{#each site.navigation}}
            <a href="{{url}}" class="cursor-pointer font-bold hover:underline text-current text-lg md:text-3xl">
                <span>{{title}}</span>
            </a>
            {{/each}}
        </div>
    </header>
    {{!@content}}
    <div class="w-full h-px bg-current opacity-20"></div>
    <footer class="pt-32 pb-24 px-6 w-full flex flex-col items-center gap-8">
        <div class="text-6xl sm:text-8xl md:text-9xl folio--brand leading-none flex items-center">
            <span>folio</span>
            <span class="opacity-70">labs</span>
            <span>.</span>
        </div>
        <div class="flex flex-col justify-center">
            <div class="flex gap-4 justify-center mb-4">
                {{#each site.footer.links}}
                <a href="{{url}}" class="hover:underline text-current font-bold">{{title}}</a>
                {{/each}}
            </div>
            <div class="mb-1 text-sm opacity-60 text-center">
                <div>Designed and built by <a href="https://josemi.xyz" class="hover:underline text-current font-bold">Josemi</a> in Valencia, Spain.</div>
                <div>Source code is available on <a href="{{site.repository}}" class="hover:underline text-current font-bold">GitHub</a>.</div>
            </div>
            <div class="text-xs opacity-60 text-center">
                <span>This site does not track you.</span>
            </div>
        </div>
    </footer>
</body>
</html>
