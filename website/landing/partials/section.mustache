<section class="w-full py-32 md:py-40 {{this.className}}" style="{{this.style}}" data-role="section">
    <div class="mx-auto max-w-6xl px-6">
        <div class="flex flex-col gap-8 mb-24 items-center" data-role="section:header">
            {{#if this.icon}}
            <div class="flex mb-0">
                <div class="flex items-center opacity-90">
                    {{=icon icon=this.icon className="w-28 h-28"}}
                </div>
            </div>
            {{/if}}
            {{#if this.label}}
            <div class="font-medium text-lg md:text-xl text-center opacity-70">
                {{!this.label}}
            </div>
            {{/if}}
            <div class="max-w-4xl text-5xl sm:text-6xl md:text-7xl leading-none font-extrabold text-center">
            {{#each this.title}}
                <span class="{{this.className}}">{{!this.text}}</span>
            {{/each}}
            </div>
            {{#if this.description}}
            <div class="max-w-2xl text-xl md:text-2xl text-center opacity-80">
                {{!this.description}}
            </div>
            {{/if}}
        </div>
        {{!@content}}
    </div>
</section>
