<section class="w-full py-32 md:py-40 {{this.className}}" data-role="section">
    <div class="mx-auto max-w-6xl px-6">
        <div class="flex flex-col gap-8 mb-20 items-center" data-role="section:header">
            {{#if this.icon}}
            <div class="flex mb-2">
                <div class="flex items-center">
                    {{=icon icon=this.icon className="w-20 h-20"}}
                </div>
            </div>
            {{/if}}
            <div class="max-w-4xl text-5xl sm:text-6xl md:text-7xl leading-none font-extrabold text-center">
            {{#each this.title}}
                <span class="{{this.className}}">{{!this.text}}</span>
            {{/each}}
            </div>
            {{#if this.description}}
            <div class="max-w-3xl text-gray-900 text-lg sm:text-xl md:text-2xl text-center">
                {{!this.description}}
            </div>
            {{/if}}
        </div>
        {{!@content}}
    </div>
</section>
