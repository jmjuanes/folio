<div class="w-full grid grid-cols-1 md:grid-cols-{{this.size}} gap-8" data-role="group">
    {{#each this.items}}
    <article class="mb-2">
        {{#if this.icon}}
        <div class="flex justify-start mb-6">
            <div class="flex items-center opacity-80">
                {{=icon icon=this.icon className="w-12 h-12"}}
            </div>
        </div>
        {{/if}}
        <div class="font-extrabold text-2xl leading-tight mb-3">
            <span>{{!this.title}}</span>
        </div>
        <div class="leading-relaxed opacity-80">
            <span>{{!this.description}}</span>
        </div>
        {{#if this.image}}
        <div class="mt-6 w-full rounded-2xl bg-white overflow-hidden">
            <img src="{{this.image}}" alt="{{this.title}} screenshot" width="100%" loading="lazy">
        </div>
        {{/if}}
    </article>
    {{/each}}
</div>
