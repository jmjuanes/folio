---
{{>>hero.mustache ...page.attributes.hero}}
    <div class="py-16 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 w-full">
    {{#each page.attributes.plans}}
        <div class="border-1 border-current rounded-4xl p-8 {{this.className}}">
            <div class="text-center text-3xl sm:text-4xl md:text-4xl font-extrabold">{{this.title}}</div>
            <div class="text-center text-xl font-medium opacity-90 mb-4">{{this.subtitle}}</div>
            <div class="text-sm opacity-80 mb-8">{{this.description}}</div>
            <div class="flex flex-col gap-4">
            {{#each this.features}}
                <div class="flex flex-row items-start gap-4">
                    <div class="shrink-0 text-current flex">
                        {{=icon icon="check" className="w-6 h-6"}}
                    </div>
                    <div class="w-full opacity-80">{{!this}}</div>
                </div>
            {{/each}}
            </div>
            {{#if this.link}}
            <div class="mt-8 flex justify-center">
                <a href="{{this.link}}" class="font-bold text-2xl hover:underline">
                    <span>Get Started →</span>
                </a>
            </div>
            {{/if}}
        </div>
    {{/each}}
    </div>
    {{#if page.attributes.notes}}
    <div class="flex flex-col items-center gap-0">
        {{#each page.attributes.notes}}
        <div class="text-xs opacity-50">{{!this}}</div>
        {{/each}}
    </div>
    {{/if}}
{{/hero.mustache}}
{{>>section.mustache ...page.attributes.comparison.sectionOptions}}
<div class="flex flex-col gap-4 w-full">
    <div class="grid grid-cols-5 gap-2 w-full">
        <div class="col-span-2"></div>
        {{#each page.attributes.comparison.table.header}}
        <div class="w-full text-center text-xl">
            <span class="font-bold">{{this.title}}</span>
        </div>
        {{/each}}
    </div>
    {{#each page.attributes.comparison.table.body}}
    <div class="w-full">
        <div class="opacity-60 py-3">
            <span class="font-normal text-lg">{{this.title}}</span>
        </div>
        {{#each this.rows}}
        <div class="h-px w-full bg-current opacity-10"></div>
        <div class="w-full grid grid-cols-5 gap-2 py-3">
            <div class="col-span-2">
                <span class="font-bold">{{this.title}}</span>
            </div>
            {{#each this.columns}}
            <div class="flex justify-center w-full text-center">
                {{#if this.text}}
                <span class="opacity-80">{{!this.text}}</span>
                {{/if}}
                {{#if this.icon}}
                <div class="flex items-center">
                    {{=icon icon=this.icon className="w-6 h-6"}}
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
    {{/each}}
    <div class="w-full text-center opacity-50 text-sm">
        <span><b>*</b> Planned features that are not available at this moment.</span>
    </div>
</div>
{{/section.mustache}}
