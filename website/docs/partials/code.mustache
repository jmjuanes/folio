<div class="rounded-lg overflow-hidden mb-6">
{{#if label}}
<div class="flex items-center gap-2 bg-gray-100 text-gray-900 text-xs font-mono px-3 py-3 border-b-1 border-gray-200 select-none">
    {{#if icon}}
    <span class="flex items-center text-lg">{{=icon icon=icon}}</span>
    {{/if}}
    <span>{{label}}</span>
</div>
{{/if}}
<pre class="w-full overflow-x-auto bg-gray-100 text-gray-900 text-xs font-mono leading-relaxed p-4">
{{=highlight code=@content language=language}}
</pre>
</div>
