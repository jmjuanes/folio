{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2022",
        "skipLibCheck": true,
        "rewriteRelativeImportExtensions": true
    },
    "exclude": [
        "node_modules/**/*",
        "**/*.js"
    ]
}