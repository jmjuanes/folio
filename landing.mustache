            ]
        },
        {
            "name": "studio",
            "label": "Introducing <b>Folio Studio</b>.",
            "title": [
                {
                    "text": "Where "
                },
                {
                    "className": "underline font-bold",
                    "text": "Ideas"
                },
                {
                    "text": " take "
                },
                {
                    "className": "italic font-normal",
                    "text": "Shape."
                },
