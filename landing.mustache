{{#frontmatter}}
navbar:
  links:
    - title: "Studio"
      url: "#studio"
    - title: "Plans"
      url: "#plans"
    - title: "Docs"
      url: "/docs"
  cta:
    title: "Try it"
    url: "/app"
features:
  - icon: "shield"
    title: "Design with total Privacy."
    description: "We are committed to keeping your work private and secure. For that reason, folio uses the local storage of your browser to ensure that your drawings are accessible only to you."
  - icon: "square"
    title: "Boundless Canvas."
    description: "Unleash your imagination on an infinite canvas. Whether you are sketching, prototyping, or creating, folio provides limitless space for your creativity to flourish."
  - icon: "files"
    title: "Organize your Ideas."
    description: "The new Pages feature allows you to organize your drawings into distinct pages, making it effortless to manage and present your ideas."
  - icon: "album"
    title: "Save, Organize, and Reuse Elements."
    description: "Use the Library to create a personal repository of reusable components. Import and export your collections to collaborate or organize projects, and sync across all boards for consistent access."
{{/frontmatter}}
{{>*icon}}
<svg width="1em" height="1em" class="{{this.className}}"><use xlink:href="/icons.svg#{{this.icon}}"></use></svg>
{{/icon}}
{{#with @frontmatter}}
<!doctype html>
<html lang="en" style="overscroll-behavior-x:none;" class="">
<head>
    <meta charSet="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">
    <meta name="title" content="folio.">
    <meta name="description" content="The minimalistic digital whiteboard for sketching and prototyping.">
    <meta name="keywords" content="folio, whiteboard, sketching, prototyping, digital whiteboard, design tool, ux tool, ui tool">
    <meta name="author" content="Josemi Juanes">
    <meta name="og:type" content="website">
    <meta name="og:site_name" content="folio.">
    <meta name="og:description" content="The minimalistic digital whiteboard for sketching and prototyping.">
    <meta name="og:image" content="/og-image.png">
    <meta name="og:url" content="https://folio.josemi.xyz">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap">
    <link rel="stylesheet" href="/low.css">
    <link rel="stylesheet" href="/brand.css">
    <title>Sketch, design, prototype - folio.</title>
</head>
<body class="m-0 p-0 font-sans leading-normal bg-background text-foreground">
    <header class="flex items-center justify-between w-full px-8 py-8 max-w-9xl mx-auto" data-role="navbar">
        <a href="/" class="flex items-center gap-1 cursor-pointer leading-none">
            <div class="text-4xl font-brand text-current">folio.</div>
        </a>
        <div class="flex gap-6 items-center">
            {{#each this.navbar.links}}
            <a href="{{this.url}}" class="cursor-pointer font-medium hover:underline text-current text-lg md:text-2xl">
                <span>{{this.title}}</span>
            </a>
            {{/each}}
            {{#if this.navbar.cta}}
            <a href="{{this.navbar.cta.url}}" class="flex items-center gap-1 px-3 py-2 bg-primary text-primary-foreground rounded-xl hover:opacity-90">
                <span class="font-bold text-lg md:text-xl">{{this.navbar.cta.title}}</span>
                <div class="flex items-center text-xl">
                    {{>icon icon="arrow-right" className=""}}
                </div>
            </a>
            {{/if}}
        </div>
    </header>
    <!-- hero section -->
    <section class="max-w-6xl mx-auto px-6 py-32 flex flex-col justify-center items-center gap-6" data-role="hero">
        <div class="items-center justify-center">
            <div class="text-current px-4 py-1 rounded-full border-1 border-current text-base opacity-60">
                <span class="font-medium">Sketch. Design. Prototype.</span>
            </div>
        </div>
        <div class="mb-0 text-6xl sm:text-7xl md:text-8xl lg:text-9xl text-center leading-tight font-extrabold">
            <span class="">Your</span>
            <span class="font-normal italic">Instant</span>
            <span class="font-black">Sketching</span>
            <span class="opacity-80">Suite.</span>
        </div>
        <div class="max-w-4xl mb-0 text-2xl md:text-3xl text-center opacity-80">
            <span><b>Folio</b> is an infinite canvas for your creative journey.</span>
            <span>Sketch, prototype, and bring your ideas to life with ease.</span>
        </div>
        <div class="flex flex-col items-center gap-2">
            <div class="flex flex-col sm:flex-row items-center gap-4 text-center">
                <a href="/app" class="flex items-center cursor-pointer hover:underline text-current text-3xl md:text-5xl">
                    <span class="font-bold">Try folio &rarr;</span>
                </a>
            </div>
            <div class="text-sm select-none text-center opacity-40">
                <span>No signup. Start in less than 5 seconds.</span>
            </div>
        </div>
    </section>
    <!-- features section -->
    <section class="w-full py-32 sm:py-40 md:py-48" data-role="section">
        <a name="features"></a>
        <div class="mx-auto max-w-6xl px-6">
            <!-- features title -->
            <div class="flex flex-col gap-8 items-center" data-role="section:header">
                <div class="max-w-4xl w-full mx-auto flex flex-col items-center">
                    <div class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl leading-none font-extrabold text-center">
                        <span class="block opacity-60">Sketch and design.</span>
                        <span class="">With freedom.</span>
                    </div>
                </div>
            </div>
            <!-- features groups -->
            <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-12 mt-24">
                {{#each this.features}}
                <article class="mb-2" data-role="feature-item">
                    <div class="flex items-center justify-center mb-6">
                        <div class="flex items-center p-6 rounded-full bg-primary text-primary-foreground">
                            {{>icon icon=this.icon className="w-16 h-16 opacity-80"}}
                        </div>
                    </div>
                    <div class="font-extrabold text-2xl leading-tight mb-3 text-center">
                        <span>{{!this.title}}</span>
                    </div>
                    <div class="leading-relaxed opacity-80 text-lg text-center">
                        <span>{{!this.description}}</span>
                    </div>
                </article>
                {{/each}}
            </div>
        </div>
    </section>
    <!-- folio studio section -->
    <a name="studio"></a>
    <section class="w-full py-32 sm:py-40 md:py-48 bg-primary text-primary-foreground" data-role="section">
        <div class="mx-auto max-w-6xl px-6">
            <div class="flex flex-col gap-8 items-center" data-role="section:header">
                <div class="mb-2 font-bold text-xl md:text-2xl text-center opacity-70">
                    <span>Introducing Folio Studio</span>
                </div>
                <div class="max-w-5xl w-full mx-auto flex flex-col items-center">
                    <div class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl leading-none font-extrabold text-center">
                        <span class="block opacity-60">Your Sketching Kit.</span>
                        <span class="">Self-Hosted.</span>
                    </div>
                </div>
                {{#if this.description}}
                <div class="max-w-2xl text-xl md:text-2xl text-center opacity-80">
                    {{!this.description}}
                </div>
                {{/if}}
                {{#if this.actions}}
                <div class="flex flex-col sm:flex-row justify-center items-center gap-6">
                    {{#each this.actions}}
                    <a href="{{this.url || this.link}}" class="font-bold text-2xl hover:underline">
                        <span>{{!this.text}} →</span>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            {{#each this.content}}
            <div class="mt-24">
                {{#eq this.type "group"}}
                <div class="w-full grid grid-cols-1 md:grid-cols-{{this.size}} gap-12" data-role="group">
                    {{#each this.items}}
                    <article class="mb-2">
                        {{#if this.icon}}
                        <div class="flex mb-6">
                            <div class="flex items-center {{@parent.iconClassName}}">
                                {{=icon icon=this.icon className="w-16 h-16 opacity-80"}}
                            </div>
                        </div>
                        {{/if}}
                        {{#if this.title}}
                        <div class="font-extrabold text-2xl leading-tight mb-3 {{@parent.titleClassName}}">
                            <span>{{!this.title}}</span>
                        </div>
                        {{/if}}
                        {{#if this.description}}
                        <div class="leading-relaxed opacity-80 text-lg {{@parent.descriptionClassName}}">
                            <span>{{!this.description}}</span>
                        </div>
                        {{/if}}
                    </article>
                    {{/each}}
                </div>
                {{/eq}}
                {{#eq this.type "command"}}
                <div class="flex justify-center py-8">
                    <div class="w-full d-flex flex-col text-current text-xl sm:text-2xl md:text-3xl text-center font-mono font-bold">
                        <div>{{this.command}}</div>
                    </div>
                </div>
                {{/eq}}
                {{#eq this.type "plans"}}
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 w-full">
                    {{#each this.items}}
                    <div class="border-1 border-current rounded-4xl p-8 {{this.className}}">
                        <div class="text-center text-3xl sm:text-4xl md:text-4xl font-extrabold">{{this.title}}</div>
                        <div class="text-center text-xl font-medium opacity-90 mb-4">{{this.subtitle}}</div>
                        <div class="text-sm opacity-80 mb-8">{{this.description}}</div>
                        <div class="flex flex-col gap-4">
                        {{#each this.features}}
                            <div class="flex flex-row items-start gap-4">
                                <div class="shrink-0 text-current flex">
                                    {{=icon icon="check" className="w-6 h-6"}}
                                </div>
                                <div class="w-full opacity-80">{{!this}}</div>
                            </div>
                        {{/each}}
                        </div>
                        {{#if this.link}}
                        <div class="mt-8 flex justify-center">
                            <a href="{{this.link}}" class="font-bold text-2xl hover:underline">
                                <span>Get Started →</span>
                            </a>
                        </div>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
                {{#if this.notes}}
                <div class="mt-12 flex flex-col items-center gap-0">
                    {{#each this.notes}}
                    <div class="text-xs opacity-50">{{!this}}</div>
                    {{/each}}
                </div>
                {{/if}}
                {{/eq}}
            </div>
            {{/each}}
        </div>
    </section>

    <div class="w-full h-px bg-white opacity-10"></div>
    <footer class="py-8 px-8 max-w-9xl w-full mx-auto flex items-center gap-4 justify-between">
        <div class="text-sm opacity-60">
            <span>{{!site.footer.text}}</span>
        </div>
        <div class="flex gap-4">
            {{#each site.footer.links}}
            <a href="{{this.url}}" class="hover:underline text-current font-bold text-sm">
                <span>{{this.label || this.title}}</span>
            </a>
            {{/each}}
        </div>
    </footer>
</body>
</html>
{{/with}}